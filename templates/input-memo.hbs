{{!-- /templates/input-memo.hbs --}}
<div class="component-inner memo-inner">
    {{> component this}}
    <div class="component-widget">
        <div class="memo-title">{{topic_complete}}</div>
        {{#if modus}}
        <!-- each ??? gleicher SpeicherName fÃ¼r alle DBs -->
            <div class="memo-display" id="memo-out-{{topic}}">
            </div>
        {{else}}
            <textarea class="textarea memo-text" id="{{id}}">{{message}}</textarea>
            <div class="buttongroup">
                <button class="button resetMemo" >{{resetInput}}</button>
                <button class="button clearMemo" >{{clearAll}}</button>
            </div>
        {{/if}}
    </div>
</div>
